{
  "templates": {
    "is_started": {
      "type": "is_started"
    },
    "conditional": {
      "type": "conditional",
      "trigger": "MC:ONCE|WHILE|UNTIL|IF",
      "event": "*OBJECT:event",
      "response": "*OBJECT:action|condition|sequential"
    },
    "sequential": {
      "type": "sequential",
      "first": "*OBJECT:action|condition|sequential",
      "second": "*OBJECT:action|condition|sequential"
    },
    "action": {
      "type": "action",
      "commanded_unit": "OBJECT:unit_descriptor"
    },
    "build": {
      "type": "build",
      "parents": ["action"],
      "quantity": "*INTEGER",
      "unit_type": "*STRING",
      "ecg_identifier": "*INTEGER",
      "location": "OBJECT:location_descriptor"
    },
    "gather": {
      "type": "gather",
      "parents": ["action"],
      "resource_type": "MC:gas|minerals"
    },
    "move": {
      "type": "move",
      "parents": ["action"],
      "location": "*OBJECT:location_descriptor"
    },
    "attack": {
      "type": "attack",
      "parents": ["action"],
      "target": "*OBJECT:location_descriptor|unit_descriptor"
    },
    "defend": {
      "type": "defend",
      "parents": ["action"],
      "target": "*OBJECT:location_descriptor|unit_descriptor"
    },
    "event": {
      "type": "event"
    },
    "army": {
      "type": "army",
      "parents": ["event"],
      "unit_descriptor": "*OBJECT:unit_descriptor"
    },
    "resource": {
      "type": "resource",
      "parents": ["event"],
      "resource_enum": "MC:supply|gas|minerals",
      "threshold": "*INTEGER",
      "comparator": "MC:GREATER|LESS|EQUAL"
    },
    "construction": {
      "type": "construction",
      "parents": ["event"],
      "unit_descriptor": "*OBJECT:unit_descriptor"
    },
    "location": {
      "type": "location",
      "parents": ["event"],
      "location_descriptor": "*OBJECT:location_descriptor",
      "unit_descriptor": "*OBJECT:unit_descriptor"
    },
    "location_descriptor": {
      "type": "location_descriptor",
      "landmark": "OBJECT:unit_descriptor",
      "region": "MC:EXACT|CLOSE|DISTANT|RIGHT|LEFT|BACK|FRONT"
    },
    "unit_descriptor": {
      "type": "unit_descriptor",
      "quantity": "*INTEGER",
      "unit_type": "STRING",
      "unit_name": "STRING",
      "ecg_identifier": "*INTEGER",
      "location": "OBJECT:location_descriptor",
      "status": "MC:IDLE|ATTACKING|DEFENDING|GATHERING|EXPLORING|HARASSING|BUILDING|NA",
      "ally": "*BOOLEAN"
    }
  }
}
